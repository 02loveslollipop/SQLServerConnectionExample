@page "{id:int}"
@model Academic_webapp.Pages.Instructors.DeleteModel
@{
    ViewData["Title"] = "Delete Instructor";
}

<h1 class="display-6 text-danger">Delete Instructor</h1>

@if (!string.IsNullOrEmpty(Model.ErrorMessage))
{
    <div class="alert alert-danger">@Model.ErrorMessage</div>
}

<h5>Are you sure you want to delete this instructor?</h5>
<dl class="row mt-3">
    <dt class="col-sm-2">Name</dt>
    <dd class="col-sm-10">@Model.Instructor.InstructorName</dd>
    <dt class="col-sm-2">Department</dt>
    <dd class="col-sm-10">@Model.Instructor.Department?.DepartmentName</dd>
</dl>

<form method="post">
    <input type="hidden" asp-for="Instructor.InstructorID" />
    <button type="submit" class="btn btn-danger">Delete</button>
    <a asp-page="Index" class="btn btn-secondary">Cancel</a>
</form>
