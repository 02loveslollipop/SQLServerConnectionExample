@page "{id:int}"
@model Academic_webapp.Pages.Instructors.DetailsModel
@{
    ViewData["Title"] = "Instructor Details";
}

<h1 class="display-6">Instructor Details</h1>

<dl class="row mt-4">
    <dt class="col-sm-2">Name</dt>
    <dd class="col-sm-10">@Model.Instructor.InstructorName</dd>
    <dt class="col-sm-2">Department</dt>
    <dd class="col-sm-10">@Model.Instructor.Department?.DepartmentName</dd>
</dl>

<section class="mt-4">
    <h5>Courses</h5>
    @if (Model.Instructor.Courses.Any())
    {
        <ul>
        @foreach (var course in Model.Instructor.Courses.OrderBy(c => c.CourseName))
        {
            <li>@course.CourseName (@course.Credits credits)</li>
        }
        </ul>
    }
    else
    {
        <p class="text-muted">No courses assigned to this instructor.</p>
    }
</section>

<p class="mt-4">
    <a asp-page="Edit" asp-route-id="@Model.Instructor.InstructorID" class="btn btn-primary">Edit</a>
    <a asp-page="Index" class="btn btn-secondary">Back to List</a>
</p>
