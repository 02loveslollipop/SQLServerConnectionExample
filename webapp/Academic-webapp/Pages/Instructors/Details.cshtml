@page "{id:int}"
@model Academic_webapp.Pages.Instructors.DetailsModel
@{
    ViewData["Title"] = "Detalle de docente";
}

<h1 class="display-6">Detalle de docente</h1>

<dl class="row mt-4">
    <dt class="col-sm-2">Nombre</dt>
    <dd class="col-sm-10">@Model.Instructor.InstructorName</dd>
    <dt class="col-sm-2">Departamento</dt>
    <dd class="col-sm-10">@Model.Instructor.Department?.DepartmentName</dd>
</dl>

<section class="mt-4">
    <h5>Cursos</h5>
    @if (Model.Instructor.Courses.Any())
    {
        <ul>
        @foreach (var course in Model.Instructor.Courses.OrderBy(c => c.CourseName))
        {
            <li>@course.CourseName (@course.Credits cr√©ditos)</li>
        }
        </ul>
    }
    else
    {
        <p class="text-muted">Sin cursos asignados a este docente.</p>
    }
</section>

<p class="mt-4">
    <a asp-page="Edit" asp-route-id="@Model.Instructor.InstructorID" class="btn btn-primary">Editar</a>
    <a asp-page="Index" class="btn btn-secondary">Volver</a>
</p>
