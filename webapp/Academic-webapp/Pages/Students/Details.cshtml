@page "{id:int}"
@model Academic_webapp.Pages.Students.DetailsModel
@{
    ViewData["Title"] = "Detalle de estudiante";
}

<h1 class="display-6">Detalle de estudiante</h1>

<dl class="row mt-4">
    <dt class="col-sm-2">Estudiante</dt>
    <dd class="col-sm-10">@Model.Student.FullName</dd>
    <dt class="col-sm-2">Carrera</dt>
    <dd class="col-sm-10">@Model.Student.Major?.MajorName</dd>
    <dt class="col-sm-2">Departamento</dt>
    <dd class="col-sm-10">@Model.Student.Major?.Department?.DepartmentName</dd>
</dl>

<section class="mt-4">
    <h5>Inscripciones</h5>
    @if (Model.Student.Enrollments.Any())
    {
        <table class="table table-sm">
            <thead>
                <tr>
                    <th>Curso</th>
                    <th>Cr√©ditos</th>
                    <th>Fecha</th>
                </tr>
            </thead>
            <tbody>
            @foreach (var enrollment in Model.Student.Enrollments.OrderByDescending(e => e.EnrollmentDate))
            {
                <tr>
                    <td>@enrollment.Course?.CourseName</td>
                    <td>@enrollment.Course?.Credits</td>
                    <td>@enrollment.EnrollmentDate.ToString("yyyy-MM-dd")</td>
                </tr>
            }
            </tbody>
        </table>
    }
    else
    {
        <p class="text-muted">Sin inscripciones registradas.</p>
    }
</section>

<p class="mt-4">
    <a asp-page="Edit" asp-route-id="@Model.Student.StudentID" class="btn btn-primary">Editar</a>
    <a asp-page="Index" class="btn btn-secondary">Volver</a>
</p>
