@page "{id:int}"
@model Academic_webapp.Pages.Students.DeleteModel
@{
    ViewData["Title"] = "Delete Student";
}

<h1 class="display-6 text-danger">Delete Student</h1>

<h5>Are you sure you want to delete this student?</h5>
<dl class="row mt-3">
    <dt class="col-sm-2">Student</dt>
    <dd class="col-sm-10">@Model.Student.FullName</dd>
    <dt class="col-sm-2">Major</dt>
    <dd class="col-sm-10">@Model.Student.Major?.MajorName</dd>
    <dt class="col-sm-2">Department</dt>
    <dd class="col-sm-10">@Model.Student.Major?.Department?.DepartmentName</dd>
</dl>

<form method="post">
    <input type="hidden" asp-for="Student.StudentID" />
    <button type="submit" class="btn btn-danger">Delete</button>
    <a asp-page="Index" class="btn btn-secondary">Cancel</a>
</form>
