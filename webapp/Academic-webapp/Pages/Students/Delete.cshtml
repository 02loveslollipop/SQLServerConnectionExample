@page "{id:int}"
@model Academic_webapp.Pages.Students.DeleteModel
@{
    ViewData["Title"] = "Eliminar estudiante";
}

<h1 class="display-6 text-danger">Eliminar estudiante</h1>

@if (!string.IsNullOrEmpty(Model.ErrorMessage))
{
    <div class="alert alert-danger">@Model.ErrorMessage</div>
}

<h5>Â¿Seguro que deseas eliminar a este estudiante?</h5>
<dl class="row mt-3">
    <dt class="col-sm-2">Estudiante</dt>
    <dd class="col-sm-10">@Model.Student.FullName</dd>
    <dt class="col-sm-2">Carrera</dt>
    <dd class="col-sm-10">@Model.Student.Major?.MajorName</dd>
    <dt class="col-sm-2">Departamento</dt>
    <dd class="col-sm-10">@Model.Student.Major?.Department?.DepartmentName</dd>
</dl>

<form method="post">
    <input type="hidden" asp-for="Student.StudentID" />
    <button type="submit" class="btn btn-danger">Eliminar</button>
    <a asp-page="Index" class="btn btn-secondary">Cancelar</a>
</form>
