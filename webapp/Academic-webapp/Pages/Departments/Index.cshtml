@page
@model Academic_webapp.Pages.Departments.IndexModel
@{
    ViewData["Title"] = "Departments";
}

<h1 class="display-6">Departments</h1>

@if (!string.IsNullOrWhiteSpace(Model.StatusMessage))
{
    <div class="alert alert-success">@Model.StatusMessage</div>
}

<p>
    <a class="btn btn-primary" asp-page="Create">Create New Department</a>
</p>

<table class="table table-striped table-bordered align-middle">
    <thead class="table-light">
        <tr>
            <th>Department Name</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.Departments)
{
        <tr>
            <td>@item.DepartmentName</td>
            <td class="text-end">
                <a class="btn btn-outline-secondary btn-sm" asp-page="Details" asp-route-id="@item.DepartmentID">Details</a>
                <a class="btn btn-outline-primary btn-sm" asp-page="Edit" asp-route-id="@item.DepartmentID">Edit</a>
                <a class="btn btn-outline-danger btn-sm" asp-page="Delete" asp-route-id="@item.DepartmentID">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
