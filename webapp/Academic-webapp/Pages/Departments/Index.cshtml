@page
@model Academic_webapp.Pages.Departments.IndexModel
@{
    ViewData["Title"] = "Departamentos";
}

<h1 class="display-6">Departamentos</h1>

@if (!string.IsNullOrWhiteSpace(Model.StatusMessage))
{
    <div class="alert alert-success">@Model.StatusMessage</div>
}

<p>
    <a class="btn btn-primary" asp-page="Create">Crear departamento</a>
</p>

<table class="table table-striped table-bordered align-middle">
    <thead class="table-light">
        <tr>
            <th>Nombre del departamento</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.Departments)
{
        <tr>
            <td>@item.DepartmentName</td>
            <td class="text-end">
                <a class="btn btn-outline-secondary btn-sm" asp-page="Details" asp-route-id="@item.DepartmentID">Detalles</a>
                <a class="btn btn-outline-primary btn-sm" asp-page="Edit" asp-route-id="@item.DepartmentID">Editar</a>
                <a class="btn btn-outline-danger btn-sm" asp-page="Delete" asp-route-id="@item.DepartmentID">Eliminar</a>
            </td>
        </tr>
}
    </tbody>
</table>
