@page
@model Academic_webapp.Pages.Departments.CreateModel
@{
    ViewData["Title"] = "Crear departamento";
}

<h1 class="display-6">Crear departamento</h1>

<form method="post" class="mt-4">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <div class="mb-3">
        <label asp-for="Department.DepartmentName" class="form-label"></label>
        <input asp-for="Department.DepartmentName" class="form-control" />
        <span asp-validation-for="Department.DepartmentName" class="text-danger"></span>
    </div>
    <button type="submit" class="btn btn-primary">Guardar</button>
    <a asp-page="Index" class="btn btn-secondary">Cancelar</a>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
