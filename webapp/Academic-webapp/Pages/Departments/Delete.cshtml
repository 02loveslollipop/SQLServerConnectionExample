@page "{id:int}"
@model Academic_webapp.Pages.Departments.DeleteModel
@{
    ViewData["Title"] = "Eliminar departamento";
}

<h1 class="display-6 text-danger">Eliminar departamento</h1>

@if (!string.IsNullOrEmpty(Model.ErrorMessage))
{
    <div class="alert alert-danger">@Model.ErrorMessage</div>
}

<h5>Seguro que deseas eliminar este departamento?</h5>
<div class="mt-3">
    <dl class="row">
        <dt class="col-sm-2">Nombre</dt>
        <dd class="col-sm-10">@Model.Department.DepartmentName</dd>
    </dl>
</div>

<form method="post">
    <input type="hidden" asp-for="Department.DepartmentID" />
    <button type="submit" class="btn btn-danger">Eliminar</button>
    <a asp-page="Index" class="btn btn-secondary">Cancelar</a>
</form>
