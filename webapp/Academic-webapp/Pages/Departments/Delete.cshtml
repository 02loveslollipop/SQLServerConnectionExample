@page "{id:int}"
@model Academic_webapp.Pages.Departments.DeleteModel
@{
    ViewData["Title"] = "Delete Department";
}

<h1 class="display-6 text-danger">Delete Department</h1>

<h5>Are you sure you want to delete this department?</h5>
<div class="mt-3">
    <dl class="row">
        <dt class="col-sm-2">Name</dt>
        <dd class="col-sm-10">@Model.Department.DepartmentName</dd>
    </dl>
</div>

<form method="post">
    <input type="hidden" asp-for="Department.DepartmentID" />
    <button type="submit" class="btn btn-danger">Delete</button>
    <a asp-page="Index" class="btn btn-secondary">Cancel</a>
</form>
