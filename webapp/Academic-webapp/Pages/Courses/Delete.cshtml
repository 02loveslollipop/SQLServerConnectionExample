@page "{id:int}"
@model Academic_webapp.Pages.Courses.DeleteModel
@{
    ViewData["Title"] = "Eliminar curso";
}

<h1 class="display-6 text-danger">Eliminar curso</h1>

@if (!string.IsNullOrEmpty(Model.ErrorMessage))
{
    <div class="alert alert-danger">@Model.ErrorMessage</div>
}

<h5>¿Seguro que deseas eliminar este curso?</h5>
<dl class="row mt-3">
    <dt class="col-sm-2">Curso</dt>
    <dd class="col-sm-10">@Model.Course.CourseName</dd>
    <dt class="col-sm-2">Créditos</dt>
    <dd class="col-sm-10">@Model.Course.Credits</dd>
    <dt class="col-sm-2">Docente</dt>
    <dd class="col-sm-10">@Model.Course.Instructor?.InstructorName</dd>
</dl>

<form method="post">
    <input type="hidden" asp-for="Course.CourseID" />
    <button type="submit" class="btn btn-danger">Eliminar</button>
    <a asp-page="Index" class="btn btn-secondary">Cancelar</a>
</form>
