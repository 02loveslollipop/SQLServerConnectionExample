@page "{id:int}"
@model Academic_webapp.Pages.Courses.DeleteModel
@{
    ViewData["Title"] = "Delete Course";
}

<h1 class="display-6 text-danger">Delete Course</h1>

@if (!string.IsNullOrEmpty(Model.ErrorMessage))
{
    <div class="alert alert-danger">@Model.ErrorMessage</div>
}

<h5>Are you sure you want to delete this course?</h5>
<dl class="row mt-3">
    <dt class="col-sm-2">Course</dt>
    <dd class="col-sm-10">@Model.Course.CourseName</dd>
    <dt class="col-sm-2">Credits</dt>
    <dd class="col-sm-10">@Model.Course.Credits</dd>
    <dt class="col-sm-2">Instructor</dt>
    <dd class="col-sm-10">@Model.Course.Instructor?.InstructorName</dd>
</dl>

<form method="post">
    <input type="hidden" asp-for="Course.CourseID" />
    <button type="submit" class="btn btn-danger">Delete</button>
    <a asp-page="Index" class="btn btn-secondary">Cancel</a>
</form>
