@page "{id:int}"
@model Academic_webapp.Pages.Courses.DetailsModel
@{
    ViewData["Title"] = "Detalle de curso";
}

<h1 class="display-6">Detalle de curso</h1>

<dl class="row mt-4">
    <dt class="col-sm-2">Curso</dt>
    <dd class="col-sm-10">@Model.Course.CourseName</dd>
    <dt class="col-sm-2">Cr√©ditos</dt>
    <dd class="col-sm-10">@Model.Course.Credits</dd>
    <dt class="col-sm-2">Docente</dt>
    <dd class="col-sm-10">@Model.Course.Instructor?.InstructorName</dd>
</dl>

<section class="mt-4">
    <h5>Inscripciones</h5>
    @if (Model.Course.Enrollments.Any())
    {
        <table class="table table-sm">
            <thead>
                <tr>
                    <th>Estudiante</th>
                    <th>Fecha</th>
                </tr>
            </thead>
            <tbody>
            @foreach (var enrollment in Model.Course.Enrollments.OrderByDescending(e => e.EnrollmentDate))
            {
                <tr>
                    <td>@enrollment.Student?.FullName</td>
                    <td>@enrollment.EnrollmentDate.ToString("yyyy-MM-dd")</td>
                </tr>
            }
            </tbody>
        </table>
    }
    else
    {
        <p class="text-muted">Sin estudiantes inscritos.</p>
    }
</section>

<p class="mt-4">
    <a asp-page="Edit" asp-route-id="@Model.Course.CourseID" class="btn btn-primary">Editar</a>
    <a asp-page="Index" class="btn btn-secondary">Volver</a>
</p>
