@page
@model Academic_webapp.Pages.Courses.CreateModel
@{
    ViewData["Title"] = "Crear curso";
}

<h1 class="display-6">Crear curso</h1>

<form method="post" class="mt-4">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <div class="mb-3">
        <label asp-for="Course.CourseName" class="form-label"></label>
        <input asp-for="Course.CourseName" class="form-control" />
        <span asp-validation-for="Course.CourseName" class="text-danger"></span>
    </div>
    <div class="mb-3">
        <label asp-for="Course.Credits" class="form-label"></label>
        <input asp-for="Course.Credits" class="form-control" type="number" min="1" max="5" />
        <span asp-validation-for="Course.Credits" class="text-danger"></span>
    </div>
    <div class="mb-3">
        <label asp-for="Course.InstructorID" class="form-label"></label>
        <select asp-for="Course.InstructorID" asp-items="Model.InstructorOptions" class="form-select">
            <option value="">-- Selecciona un docente --</option>
        </select>
        <span asp-validation-for="Course.InstructorID" class="text-danger"></span>
    </div>
    <button type="submit" class="btn btn-primary">Crear</button>
    <a asp-page="Index" class="btn btn-secondary">Cancelar</a>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
