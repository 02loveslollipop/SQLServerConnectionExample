@page "{id:int}"
@model Academic_webapp.Pages.Majors.DetailsModel
@{
    ViewData["Title"] = "Detalle de carrera";
}

<h1 class="display-6">Detalle de carrera</h1>

<dl class="row mt-4">
    <dt class="col-sm-2">Nombre</dt>
    <dd class="col-sm-10">@Model.Major.MajorName</dd>
    <dt class="col-sm-2">Departamento</dt>
    <dd class="col-sm-10">@Model.Major.Department?.DepartmentName</dd>
</dl>

<section class="mt-4">
    <h5>Estudiantes</h5>
    @if (Model.Major.Students.Any())
    {
        <ul>
        @foreach (var student in Model.Major.Students.OrderBy(s => s.LastName).ThenBy(s => s.FirstName))
        {
            <li>@student.FullName</li>
        }
        </ul>
    }
    else
    {
        <p class="text-muted">Sin estudiantes asignados a esta carrera.</p>
    }
</section>

<p class="mt-4">
    <a asp-page="Edit" asp-route-id="@Model.Major.MajorID" class="btn btn-primary">Editar</a>
    <a asp-page="Index" class="btn btn-secondary">Volver</a>
</p>
