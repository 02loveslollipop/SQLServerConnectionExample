@page "{id:int}"
@model Academic_webapp.Pages.Majors.DeleteModel
@{
    ViewData["Title"] = "Eliminar carrera";
}

<h1 class="display-6 text-danger">Eliminar carrera</h1>

@if (!string.IsNullOrEmpty(Model.ErrorMessage))
{
    <div class="alert alert-danger">@Model.ErrorMessage</div>
}

<h5>Â¿Seguro que deseas eliminar esta carrera?</h5>
<dl class="row mt-3">
    <dt class="col-sm-2">Nombre</dt>
    <dd class="col-sm-10">@Model.Major.MajorName</dd>
    <dt class="col-sm-2">Departamento</dt>
    <dd class="col-sm-10">@Model.Major.Department?.DepartmentName</dd>
</dl>

<form method="post">
    <input type="hidden" asp-for="Major.MajorID" />
    <button type="submit" class="btn btn-danger">Eliminar</button>
    <a asp-page="Index" class="btn btn-secondary">Cancelar</a>
</form>
