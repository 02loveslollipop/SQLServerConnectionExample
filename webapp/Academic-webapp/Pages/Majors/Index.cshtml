@page
@model Academic_webapp.Pages.Majors.IndexModel
@{
    ViewData["Title"] = "Carreras";
}

<h1 class="display-6">Carreras</h1>

@if (!string.IsNullOrWhiteSpace(Model.StatusMessage))
{
    <div class="alert alert-success">@Model.StatusMessage</div>
}

<p>
    <a class="btn btn-primary" asp-page="Create">Crear nueva carrera</a>
</p>

<table class="table table-striped table-bordered align-middle">
    <thead class="table-light">
        <tr>
            <th>Nombre de la carrera</th>
            <th>Departamento</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.Majors)
{
        <tr>
            <td>@item.MajorName</td>
            <td>@item.Department?.DepartmentName</td>
            <td class="text-end">
                <a class="btn btn-outline-secondary btn-sm" asp-page="Details" asp-route-id="@item.MajorID">Detalles</a>
                <a class="btn btn-outline-primary btn-sm" asp-page="Edit" asp-route-id="@item.MajorID">Editar</a>
                <a class="btn btn-outline-danger btn-sm" asp-page="Delete" asp-route-id="@item.MajorID">Eliminar</a>
            </td>
        </tr>
}
    </tbody>
</table>

@if (Model.TotalCount > 0)
{
    <p class="text-muted small">Mostrando @Model.DisplayFrom-@Model.DisplayTo de @Model.TotalCount carreras.</p>
}
else
{
    <p class="text-muted">No hay carreras registradas.</p>
}

@if (Model.TotalPages > 1)
{
    <nav class="mt-3" aria-label="PaginaciÃ³n de carreras">
        <ul class="pagination">
            <li class="page-item @(Model.HasPreviousPage ? string.Empty : "disabled")">
                <a class="page-link" asp-route-pageNumber="@(Model.CurrentPage - 1)">Anterior</a>
            </li>
            @for (var pageNumber = 1; pageNumber <= Model.TotalPages; pageNumber++)
            {
                <li class="page-item @(pageNumber == Model.CurrentPage ? "active" : string.Empty)">
                    <a class="page-link" asp-route-pageNumber="@pageNumber">@pageNumber</a>
                </li>
            }
            <li class="page-item @(Model.HasNextPage ? string.Empty : "disabled")">
                <a class="page-link" asp-route-pageNumber="@(Model.CurrentPage + 1)">Siguiente</a>
            </li>
        </ul>
    </nav>
}
