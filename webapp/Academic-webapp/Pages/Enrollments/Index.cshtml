@page
@model Academic_webapp.Pages.Enrollments.IndexModel
@{
    ViewData["Title"] = "Enrollments";
}

<h1 class="display-6">Enrollments</h1>

@if (!string.IsNullOrWhiteSpace(Model.StatusMessage))
{
    <div class="alert alert-success">@Model.StatusMessage</div>
}

<p>
    <a class="btn btn-primary" asp-page="Create">Add Enrollment</a>
</p>

<table class="table table-striped table-bordered align-middle">
    <thead class="table-light">
        <tr>
            <th>Student</th>
            <th>Course</th>
            <th>Instructor</th>
            <th>Date</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.Enrollments)
{
        <tr>
            <td>@item.Student?.FullName</td>
            <td>@item.Course?.CourseName</td>
            <td>@item.Course?.Instructor?.InstructorName</td>
            <td>@item.EnrollmentDate.ToString("yyyy-MM-dd")</td>
            <td class="text-end">
                <a class="btn btn-outline-primary btn-sm" asp-page="Edit" asp-route-id="@item.EnrollmentID">Edit</a>
                <a class="btn btn-outline-danger btn-sm" asp-page="Delete" asp-route-id="@item.EnrollmentID">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
