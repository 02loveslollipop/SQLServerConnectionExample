@page
@model Academic_webapp.Pages.Enrollments.IndexModel
@{
    ViewData["Title"] = "Inscripciones";
}

<h1 class="display-6">Inscripciones</h1>

@if (!string.IsNullOrWhiteSpace(Model.StatusMessage))
{
    <div class="alert alert-success">@Model.StatusMessage</div>
}

<p>
    <a class="btn btn-primary" asp-page="Create">Agregar inscripción</a>
</p>

<table class="table table-striped table-bordered align-middle">
    <thead class="table-light">
        <tr>
            <th>Estudiante</th>
            <th>Curso</th>
            <th>Docente</th>
            <th>Fecha</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.Enrollments)
{
        <tr>
            <td>@item.Student?.FullName</td>
            <td>@item.Course?.CourseName</td>
            <td>@item.Course?.Instructor?.InstructorName</td>
            <td>@item.EnrollmentDate.ToString("yyyy-MM-dd")</td>
            <td class="text-end">
                <a class="btn btn-outline-primary btn-sm" asp-page="Edit" asp-route-id="@item.EnrollmentID">Editar</a>
                <a class="btn btn-outline-danger btn-sm" asp-page="Delete" asp-route-id="@item.EnrollmentID">Eliminar</a>
            </td>
        </tr>
}
    </tbody>
</table>

@if (Model.TotalCount > 0)
{
    <p class="text-muted small">Mostrando @Model.DisplayFrom-@Model.DisplayTo de @Model.TotalCount inscripciones.</p>
}
else
{
    <p class="text-muted">No hay inscripciones registradas.</p>
}

@if (Model.TotalPages > 1)
{
    <nav class="mt-3" aria-label="Paginación de inscripciones">
        <ul class="pagination">
            <li class="page-item @(Model.HasPreviousPage ? string.Empty : "disabled")">
                <a class="page-link" asp-route-pageNumber="@(Model.CurrentPage - 1)">Anterior</a>
            </li>
            @for (var pageNumber = 1; pageNumber <= Model.TotalPages; pageNumber++)
            {
                <li class="page-item @(pageNumber == Model.CurrentPage ? "active" : string.Empty)">
                    <a class="page-link" asp-route-pageNumber="@pageNumber">@pageNumber</a>
                </li>
            }
            <li class="page-item @(Model.HasNextPage ? string.Empty : "disabled")">
                <a class="page-link" asp-route-pageNumber="@(Model.CurrentPage + 1)">Siguiente</a>
            </li>
        </ul>
    </nav>
}
