@page
@model IndexModel
@{
    ViewData["Title"] = "Home page";
}

<div class="text-center">
    <h1 class="display-4">Administracion academica</h1>
    <p class="lead">Gestiona departamentos, carreras, docentes, estudiantes, cursos e inscripciones desde un solo lugar.</p>
</div>

<div class="row text-center mt-5">
    <div class="col-md-4 mb-4">
        <div class="card h-100">
            <div class="card-body">
                <h5 class="card-title">Estructura academica</h5>
                <p class="card-text">Organiza departamentos, carreras y docentes.</p>
                <a class="btn btn-outline-primary" asp-page="/Departments/Index">Departamentos</a>
                <a class="btn btn-outline-primary mt-2" asp-page="/Majors/Index">Carreras</a>
                <a class="btn btn-outline-primary mt-2" asp-page="/Instructors/Index">Docentes</a>
            </div>
        </div>
    </div>
    <div class="col-md-4 mb-4">
        <div class="card h-100">
            <div class="card-body">
                <h5 class="card-title">Estudiantes</h5>
                <p class="card-text">Administra fichas de estudiantes y su asignacion academica.</p>
                <a class="btn btn-outline-primary" asp-page="/Students/Index">Estudiantes</a>
            </div>
        </div>
    </div>
    <div class="col-md-4 mb-4">
        <div class="card h-100">
            <div class="card-body">
                <h5 class="card-title">Cursos e inscripciones</h5>
                <p class="card-text">Gestiona el plan de estudios y el seguimiento de inscripciones.</p>
                <a class="btn btn-outline-primary" asp-page="/Courses/Index">Cursos</a>
                <a class="btn btn-outline-primary mt-2" asp-page="/Enrollments/Index">Inscripciones</a>
            </div>
        </div>
    </div>
</div>
